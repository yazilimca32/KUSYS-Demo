@model KUSYS_Demo.Models.Student

<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StudentId" class="form-control" value="@Model.StudentId" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" value="@Model.FirstName" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" value="@Model.LastName" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input type="date" asp-for="BirthDate" class="form-control" value="@(Model.BirthDate != null ? Model.BirthDate.ToString("yyyy-MM-dd") : null )" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class=" form-group">
                <label asp-for="Courses" class="control-label">Course</label>
                <select asp-for="Courses" class="form-control">

                    @if (Model.Courses != null)
                    {
                        @foreach (var item in Model.Courses)
                        {
                            
                                <option value="@item.CourseId">@item.CourseId - @item.CourseName</option>
                            
                        }
                    }
                </select>
                <span asp-validation-for="Courses" class="text-danger"></span>
            </div>

           @* <div class="form-group mt-5">
                <input type="submit" value="Edit" class="btn btn-primary form-cont" />
            </div>*@
        </form>
    </div>
    <div class="col-md-1"></div>

</div>